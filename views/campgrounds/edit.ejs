<% layout('layouts/boilerplate') -%>
    <div class="row justify-content-center">
        <h1 class="text-center">Update Campground</h1>
        <div class="col-6">
            <form action="/campgrounds/<%= camp._id %>?_method=put " method="post" novalidate class="needs-validation">
                <div class="mb-3">
                    <label class="form-label" for="title">TITLE</label>
                    <input class="form-control" type="text" id="title" placeholder="title" name="campground[title]"
                        value="<%= camp.title %> " required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">LOCATION</label>
                    <input class="form-control" type="text" id="location" placeholder="location"
                        name="campground[location]" value="<%= camp.location %> " required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="Image Url">Image Url</label>
                    <input class="form-control" type="text" id="Image Url" placeholder="Image Url"
                        name="campground[image]" value="<%= camp.image %> " required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="Price">Price</label>
                    <div class="input-group mb-3" id="Price">
                        <span class="input-group-text" for="Price-label">$</span>
                        <input type="text" class="form-control" id="Price" placeholder="0.00" aria-label="Price"
                            aria-describedby="Price-label" name="campground[price]" value="<%= camp.price %> " required>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="Description">Description</label>
                    <textarea class="form-control" type="text" id="Description" placeholder="Description"
                        name="campground[description]" required><%= camp.description %> </textarea>
                </div>

                <div class="mb-3">
                    <button class="btn btn-info">Update Campground</button>
                </div>
            </form>
            <a href="/campgrounds/<%= camp._id %>">BACK</a>
        </div>
    </div>
