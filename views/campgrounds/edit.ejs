<% layout('layouts/boilerplate') -%>
    <div class="row">
        <h1 class="text-center">Update Campground</h1>
        <div class="col-md-6 offset-md-3">
            <form action="/campgrounds/<%= camp._id %>?_method=put " method="post" novalidate class="needs-validation" enctype="multipart/form-data" >
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" placeholder="title" name="campground[title]"
                        value="<%= camp.title %> " required>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" placeholder="location"
                        name="campground[location]" value="<%= camp.location %> " required>
                </div>
                <div class="mb-3">
                    <label for="images" class="form-label">Add more images</label>
                    <input class="form-control" type="file" id="images" name="image" multiple>
                  </div>
                <div class="mb-3">
                    <label class="form-label" for="Price">Price</label>
                    <div class="input-group mb-3" id="Price">
                        <span class="input-group-text" for="Price-label">$</span>
                        <input type="text" class="form-control" id="Price" placeholder="0.00" aria-label="Price"
                            aria-describedby="Price-label" name="campground[price]" value="<%= camp.price %> " required>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="Description">Description</label>
                    <textarea class="form-control" type="text" id="Description" placeholder="Description"
                        name="campground[description]" required><%= camp.description %> </textarea>
                </div>
                <div class="mb-3">
                    <% camp.images.forEach((img, i) => {%>
                        <img src="<%=img.thumbnail%> " class="img-thumbnail" alt="">
                        <div class="form-check-inline">
                            <input type="checkbox" name="deleteImages[]" value="<%=img.filename%>" id="image-<%= i %>">
                        </div>
                        <label for="image-<%= i %>">Delete?</label>
                    <% }) %> 
                </div>
                <div class="mb-3">
                    <button class="btn btn-info">Update Campground</button>
                </div>
            </form>
            <a href="/campgrounds/<%= camp._id %>">BACK</a>
        </div>
    </div>
